public static class SeedData
{
    public static void Initialize(IServiceProvider serviceProvider)
    {
        using (var context = new PhotoGalleryContext(
            serviceProvider.GetRequiredService<DbContextOptions<PhotoGalleryContext>>()))
        {
            // Check if data already exists in the database
            if (context.Photos.Any())
            {
                return; // Database has already been seeded
            }

            context.Photos.AddRange(
                new Photo
                {
                    FilePath = "photo1.jpg",
                    Caption = "Photo 1",
                    DateTaken = new DateTime(2020, 1, 1),
                    Height = 1080,
                    Width = 1920,
                    Photographer = "John Smith"
                },
                new Photo
                {
                    FilePath = "photo2.jpg",
                    Caption = "Photo 2",
                    DateTaken = new DateTime(2020, 2, 1),
                    Height = 720,
                    Width = 1280,
                    Photographer = "Jane Doe"
                },
                new Photo
                {
                    FilePath = "photo3.jpg",
                    Caption = "Photo 3",
                    DateTaken = new DateTime(2020, 3, 1),
                    Height = 1440,
                    Width = 2560,
                    Photographer = "Bob Johnson"
                }
            );

            context.SaveChanges();
        }
    }
}
