
@page
@model PhotoGalleryModel

<h1>Photo Gallery</h1>

@foreach (var photo in Model.Photos)
{
    <div>
        <img src="@photo.FilePath" alt="@photo.Caption" />
        <p>@photo.Caption</p>
        <p>@photo.DateTaken.ToString()</p>
    </div>
}



class Photo
{
    public string FilePath { get; set; }
    public string Caption { get; set; }
    public DateTime DateTaken { get; set; }
    public int Width { get; set; }
    public string Photographer { get; set; }
}

@model IEnumerable<Photo>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FilePath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Caption)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateTaken)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Width)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Photographer)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FilePath)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Caption)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateTaken)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Width)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Photographer)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>



